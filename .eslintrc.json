{
  "extends": "react-app",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest": true
  },
  "rules": {
    "no-unused-vars": ["error", { "vars": "all", "args": "after-used", "ignoreRestSiblings": false }],
    "semi": ["error", "always"],
    "max-len": [
      2, {
        "code": 120,
        "ignoreStrings": true,
        "ignoreTemplateLiterals": true
      }
    ],
    "no-console": 1,
    "consistent-return": 0,
    "valid-typeof": 0,
    "camelcase": 0
  }
}
